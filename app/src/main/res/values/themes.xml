<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_bkg_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="numpad_edit_keyboard">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/rounded_border_shadow_white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="numpad_keyboard">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="button_fill">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_border_shadow_fill</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textfield">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/rounded_border_shadow_white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="left_side_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="right_side_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sign_in_bkg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/sign_in_background</item>
    </style>
    <style name="sign_up_bkg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/sign_up_background</item>
    </style>
    <style name="confirmation_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/confirm_number_background</item>
    </style>
    <style name="reset_pass">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/reset_password_background</item>
    </style>
    <style name="overview_bkg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/overview_background</item>
    </style>
    <style name="exam_bkg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/exam_background</item>
    </style>
    <style name="profile_bkg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/account_background</item>
    </style>
    <style name="settings_bkg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/settings_background</item>
    </style>
    <style name="back_icon_mode">
        <item name="tint">@color/white</item>
    </style>
    <style name="back_icon_fill_mode">
        <item name="tint">@color/primary_bkg_color</item>
    </style>
    <style name="backspace_icon_mode">
        <item name="tint">@color/grey</item>
    </style>
    <style name="dashboard_title_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="dashboard_title_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_bkg_color</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="title_bold_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="title_regular_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="sub_title_text_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="sub_title_text_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_bkg_color</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_bkg_color</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="sub_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_bkg_color</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>